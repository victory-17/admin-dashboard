extends layout.pug

block form
    //- Form Container
    div(class='w-full max-w-3xl bg-white shadow-md rounded-lg')
      h1(class='text-2xl font-bold mb-4') Sign Up

      form(method='post')
        //- Username
        div(class='mb-4')
          label(for='username' class='block text-gray-700 font-bold mb-2') Username
          input(type='text', id='username', name='username', required, class='w-full p-2 border border-gray-300 rounded')

        //- Password
        div(class='mb-4')
          label(for='password' class='block text-gray-700 font-bold mb-2') Password
          input(type='password', id='password', name='password', required, class='w-full p-2 border border-gray-300 rounded')

        //- Email
        div(class='mb-4')
          label(for='email' class='block text-gray-700 font-bold mb-2') Email
          input(type='email', id='email', name='email', required, class='w-full p-2 border border-gray-300 rounded')

        //- Address
        div(class='mb-4')
          label(for='address' class='block text-gray-700 font-bold mb-2') Address
          input(type='text', id='address', name='address', class='w-full p-2 border border-gray-300 rounded')

        //- Phone Number
        div(class='mb-4')
          label(for='phone_number' class='block text-gray-700 font-bold mb-2') Phone Number
          input(type='tel', id='phone_number', name='phone_number', required, class='w-full p-2 border border-gray-300 rounded')

        //- Role
        div(class='mb-4')
          label(for='role' class='block text-gray-700 font-bold mb-2') Role
          select(id='role', name='role', required, class='w-full p-2 border border-gray-300 rounded')
            option(value='user') User
            option(value='admin') Admin

        //- Submit Button
        div(class='flex justify-end')
          button(type='submit', class='bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600') Sign Up
